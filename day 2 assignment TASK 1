emp04 10-SEP-95

anirudh    singh      pathak             31 bhopal          acc manager
emp05 10-OCT-90

// UPDATE A SINGLE RECORD

SQL> update emp set city='belgaum' where fname='anirudh';

1 row updated.

// DELETE A SINGLE RECORD

SQL> delete from emp where fname='joey';

1 row deleted.

// COMMIT

SQL> commit;

Commit complete.

// DELETE ALL RECORDS

SQL> delete from emp;

4 rows deleted.

SQL> select *from emp;

no rows selected

// RETRIEVE ALL RECORDS BY ROLLBACK

SQL> rollback;

Rollback complete.

SQL> select *from emp;

FNAME      MNAME      LNAME             AGE CITY            DESG
---------- ---------- ---------- ---------- --------------- ---------------
EMPID DOB
----- ---------
armaan     singh      malik              28 bhiwandi        acc manager
emp01 25-JAN-92

begum      singh      gaurav             30 bhilai          acc manager
emp02 25-AUG-90

gayatri    varma      behara             25 banglore        sales manager
emp04 10-SEP-95


FNAME      MNAME      LNAME             AGE CITY            DESG
---------- ---------- ---------- ---------- --------------- ---------------
EMPID DOB
----- ---------
anirudh    singh      pathak             31 belgaum         acc manager
emp05 10-OCT-90

// DISPLAY EMPLOYEE NAME AND DATE OF BIRTH AS PER OUR CONVENIENCE

SQL> select substr(fname,1,1)||'.'||substr(mname,1,1)||' '||lname as "employee name",to_char(dob,'dd-mm-yyyy') as "date of birth" from emp;

employee name        date of bi
-------------------- ----------
a.s malik            25-01-1992
b.s gaurav           25-08-1990
g.v behara           10-09-1995
a.s pathak           10-10-1990

SQL>

//END
