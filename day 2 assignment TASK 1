//CREATE THE EMPLOYEE TABLE WITH REQURED CONSTRAINTS

SQL> create table emp
  2  (fname varchar(10),
  3  mname varchar(10),
  4  lname varchar(10),
  5  age int check(age between 0 and 50),
  6  city varchar(15) check ((city like 'b%') or (city like 'B%')),
  7  desg varchar(15),
  8  empid varchar(5) primary key,
  9  dob date);

Table created.

//INSERTION OF RECORDS

SQL> insert into emp values('armaan','singh','malik','28','bhiwandi','acc','emp01','25-jan-92');

1 row created.

SQL> insert into emp values('begum','singh','gaurav','30','bhilai','acc','emp02','25-aug-90');

1 row created.

SQL> insert into emp values('joey','nigam','naayak','25','bhilai','sales','emp03','03-mar-95');

1 row created.

SQL> insert into emp values('gayatri','varma','behara','25','banglore','sales','emp04','10-sep-95');

1 row created.

SQL> insert into emp values('anirudh','singh','pathak','31','bhopal','acc','emp05','10-oct-90');

1 row created.

//DISPLAY RECORDS OF 'EMP' TABLE

SQL> select *from emp;

